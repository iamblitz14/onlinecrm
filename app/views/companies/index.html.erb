<%= render 'shared/navbar' %>

<div class="container">

  <h1>Listing Companies</h1>
  <br>
  <div class="table-responsive">
    <table class="table table-striped table-condensed">
      <thead>
        <tr>
          <th>Name</th>
          <th>Manager</th>
          <th>Status</th>
          <th>Terms</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @companies.each do |company| %>
          <tr>
            <td><%= company.name %></td>
            <td><%= company.manager %></td>
            <td><%= company.status %></td>
            <td><%= company.terms %></td>
            <td><%= link_to 'Show', company, class: 'btn btn-info' %></td>
            <td><%= link_to 'Edit', edit_company_path(company), class: 'btn btn-warning' %></td>
            <td><%= link_to 'Delete', company, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <br>

  <%= link_to 'New Company', new_company_path, class: 'btn btn-primary' %>

  <hr class="style13">
  <div class="row">
    <div class="col-md-8">
      <h3>Import Companies</h3>
      <%= form_tag import_companies_path, multipart: true do %>
        <%= file_field_tag :file, class: 'btn btn-default' %><br>
        <%= submit_tag "Upload Companies", class: 'btn btn-primary' %>
      <% end %>
    </div>

    <div class="col-md-4">
      <h3>Download File</h3>
      <%= link_to "Report", companies_path(format: "csv"), class: 'btn btn-primary'  %>
    </div>
  </div>
<br>
<br>
</div>
<%= simple_form_for @invoice do |f| %>
  <%= f.error_notification %>

  <%= f.input :date %>
  <%= f.input :company %>
  <%= f.input :tax %>
  <%= f.input :salesperson %>
  <%= f.input :status_type, label: "Status", collection: [ "PENDING", "PAID"] %>
  <%#= f.input :status_type, label: "Status", collection: [ "PENDING", "PAID"], :as => :radio_buttons %>
  <%= f.error :base %>
  <%= f.button :submit, class: 'btn btn-primary' %>

<% end %>


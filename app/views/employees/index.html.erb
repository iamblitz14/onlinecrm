<%= render 'shared/navbar' %>

<div class="container">

  <h1>Listing Employees</h1>

  <div class="table-responsive">
    <table class="table table-striped table-condensed">
      <thead>
        <tr>
          <th>Name</th>
          <th>Contact Number</th>
          <th>Position</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @employees.each do |employee| %>
          <tr>
            <td><%= employee.name %></td>
            <td><%= employee.phone %></td>
            <td><%= employee.jobtype %></td>
            <td><%= link_to 'Show', employee, class: 'btn btn-info' %></td>
            <td><%= link_to 'Edit', edit_employee_path(employee), class: 'btn btn-warning' %></td>
            <td><%= link_to 'Destroy', employee, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <br>

  <%= link_to 'New Employee', new_employee_path, class: 'btn btn-primary' %>

</div>